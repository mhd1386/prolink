# ============================================
# irProLink Bot Configuration
# Version: 6.0.0 (2026)
# ============================================

# REQUIRED: Your bot token from @BotFather
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Optional: Support username (without @)
SUPPORT_USERNAME=linkprosup

# Optional: Main admin ID (numeric)
MAIN_ADMIN_ID=7660976743

# ============================================
# Download Settings
# ============================================

# Maximum file size in bytes (default: 2GB)
MAX_FILE_SIZE=2147483648

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Number of retry attempts for failed downloads
RETRY_ATTEMPTS=3

# Maximum parallel downloads
PARALLEL_DOWNLOADS=3

# ============================================
# CDN Settings (Optional)
# ============================================

# Enable CDN for better performance
ENABLE_CDN=false

# CDN provider (cloudflare, custom)
CDN_PROVIDER=cloudflare

# CDN URL (if using custom provider)
CDN_URL=https://your-cdn.example.com/

# ============================================
# Update Settings (Optional)
# ============================================

# Enable auto-update from repository
ENABLE_AUTO_UPDATE=false

# Repository URL for updates
UPDATE_REPOSITORY=https://github.com/mhd1386/prolink.git

# Branch to update from
UPDATE_BRANCH=main

# ============================================
# Logging Settings
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable file logging
ENABLE_FILE_LOGGING=true

# ============================================
# Security Settings
# ============================================

# Enable rate limiting
ENABLE_RATE_LIMIT=true

# Maximum requests per minute per user
MAX_REQUESTS_PER_MINUTE=10

# Maximum requests per day per user
MAX_REQUESTS_PER_DAY=100

# Enable anti-spam protection
ENABLE_ANTI_SPAM=true

# ============================================
# Display Settings (Can be changed via bot)
# ============================================

# Show filename in caption
SHOW_FILENAME=true

# Show filesize in caption
SHOW_FILESIZE=true

# Show source URL in caption
SHOW_SOURCE_URL=true

# Show user ID in caption
SHOW_USER_ID=true

# Show copyright in caption
SHOW_COPYRIGHT=true

# Enable short link for URLs
ENABLE_SHORT_LINK=true

# Short link service (tinyurl, is.gd, cleanuri)
SHORT_LINK_SERVICE=is.gd

# Copyright text
COPYRIGHT_TEXT=Downloaded by bot: @prolinkbot

# ============================================
# Broadcast Settings
# ============================================

# Enable broadcast feature
ENABLE_BROADCAST=true

# Broadcast cooldown in seconds (default: 1 hour)
BROADCAST_COOLDOWN=3600

# ============================================
# Notes:
# 1. Copy this file to .env
# 2. Replace YOUR_BOT_TOKEN_HERE with your actual token
# 3. Adjust other settings as needed
# ============================================
